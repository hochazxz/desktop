# - --------- -
# - Wallpaper -
# - --------- -

# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs
output * bg ~/.config/sway/walls/dwm-wallpaper.jpg fill 
# fill|tile|centered|...

# - ---------- -
# - Decoration -
# - ---------- -

# SwayFX settings
corner_radius 4
blur disable # Blur
blur_radius 4 # Blur strength
titlebar_separator disable
shadows enable # Shadow
shadows_on_csd enable
shadow_blur_radius 5
shadow_color #00000020
shadow_inactive_color #00000020

# Colors
# class                 border  bground text    indicator child_border
client.focused #292929 #292929 #C9D1C9 #39C5CF #303030
client.focused_inactive #242424 #242424 #C9D1C9 #39C5CF #FFFFFF00
client.unfocused #242424 #242424 #C9D1C9 #39C5CF #FFFFFF00
client.urgent #F85149 #202020 #C9D1C9 #EBEBF5 #F85149
client.placeholder      #000000 #0C0C0C $foreground #000000   #0C0C0C

# Font
font monospace 10
# adjust this to change titlebar size
font pango: monospace 12

# Cursor
# Name of the cursor theme directory in ~/.icons
set $cursor_theme Adwaita
set $cursor_size 24

seat seat0 xcursor_theme $cursor_theme $cursor_size

# GTK Theme
# https://github.com/swaywm/sway/wiki/GTK-3-settings-on-Wayland#setting-values-in-gsettings
exec_always {
    gsettings set org.gtk.Settings.FileChooser window-size '(1200, 700)'
    gsettings set org.gnome.desktop.interface gtk-theme 'dark'
    gsettings set org.gnome.desktop.interface icon-theme 'Papirus-Dark'
    gsettings set org.gnome.desktop.interface font-name 'Sans 10'
    gsettings set org.gnome.desktop.interface cursor-theme $cursor_theme
    gsettings set org.gnome.desktop.interface cursor-size $cursor_size
    gsettings set org.gnome.desktop.interface color-scheme 'prefer-dark'
}

# Gaps
smart_gaps on # on|off|toggle|inverse_outer
gaps outer 0
gaps inner 2

# Titlebar and border configuration
# SwayFX BUG: https://github.com/WillPower3309/swayfx/issues/201
# Looks off if > 0
titlebar_border_thickness 0

# Border
set $border_width 0
default_border normal $border_width
default_floating_border none
smart_borders off

# Window Titlebar
titlebar_padding 10 4
title_align center # left|right|center
# with title
for_window [class=".*"] title_format "<span rise='1500' font='sans Bold 10'>%title</span>"
# without title
# for_window [class=".*"] title_format "<span></span>" # w/o title

# Disable titlebar for certain windows
for_window {
    [app_id="^vpn$"] border pixel $border_width
    [app_id="vesktop"] border pixel $border_width
    [app_id="^editor$"] border pixel $border_width
    [app_id="^org$"] border pixel $border_width
    [app_id="browser"] border pixel $border_width
    [app_id="firefox"] border pixel $border_width
    [app_id="zen"] border pixel $border_width
    [app_id="librewolf"] border pixel $border_width
    [app_id="floorp"] border pixel $border_width
    [class="Chromium"] border pixel $border_width
    [app_id="Chromium"] border pixel $border_width
    [app_id="chromium"] border pixel $border_width
    [class="Brave-browser"] border pixel $border_width
    [app_id="org.mozilla.Thunderbird"] border pixel $border_width
    [app_id="thunderbird"] border pixel $border_width
    [app_id="lollypop"] border pixel $border_width
    [class="Spotify"] border pixel $border_width
    [app_id="org.qutebrowser.qutebrowser"] border pixel $border_width
    [title=".* is sharing your screen."] border pixel $border_width
    [app_id="firefox" title="Firefox â€” Sharing Indicator"] border pixel $border_width
    [app_id="gimp-2.99" title="GIMP Startup"] border pixel $border_width 
    [title="GNU Image Manipulation Program"] border pixel $border_width
    [class="^battle.net.exe$"] border pixel $border_width
    [class="^steam$"] border pixel $border_width
    [class="^leagueclient.exe$"] border pixel $border_width
    [class="^leagueclientux.exe$"] border pixel $border_width
    [app_id="^chrome$"] border pixel $border_width
    [app_id="imv"] border pixel $border_width
    [class="fl64.exe"] border pixel $border_width
}

