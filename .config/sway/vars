# - --------- -
# - Variables -
# - --------- -

set {
    # Logo key. Use Mod1 for Alt
    $mod Mod4

    # Home row direction keys, like vim
    $left h
    $down j
    $up k
    $right l

    # Your preferred terminal emulator
    $term foot

    # Your preferred application launcher
    $launcher rofi -show drun

    # Powermenu
    $powermenu ~/.local/bin/power

    # Menu
    $menu ~/.local/bin/menu

    # Window switcher
    $window-switcher rofi -show window

    # Volume
    $cmd_volume_up wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.01+ -l 1.53
    $cmd_volume_down wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.01- -l 1.53
    $cmd_volume_mute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
    $cmd_mic_mute exec wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle

    # Brightness
    $cmd_brightness_up brightnessctl set 1%+
    $cmd_brightness_down brightnessctl set 1%-
}

# vim:set ft=conf:
