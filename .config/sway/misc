# - ---- -
# - Misc -
# - ---- -

# Fix Java apps
exec export _JAVA_AWT_WM_NONREPARENTING=1

# Fix invisible cursor
exec export WLR_NO_HARDWARE_CURSORS=1

# Fix chromium + app mode inhibiting shortcuts:
# Source: https://old.reddit.com/r/swaywm/comments/vkgfza/chromium_v103_application_mode_app_and_weird/
# for_window [app_id="^chrome-.*__-.*$"] shortcuts_inhibitor disable
for_window [app_id="^chrome-.*__.*$"] shortcuts_inhibitor disable

# Disable all CSDs of GTK apps
exec gsettings set org.gnome.desktop.wm.preferences button-layout ""

### Idle configuration
# Example configuration:
#
exec swayidle -w \
           before-sleep 'playerctl --all-players pause; ~/.local/bin/lockscreen &' \
           timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"'

# This will turn off your displays after 600 seconds, and turn your screens
# back on when resumed. It will also lock your screen before your computer
# goes to sleep.

